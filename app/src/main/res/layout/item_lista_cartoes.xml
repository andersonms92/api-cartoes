<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_cartoes"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_cargo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Desenvolvedor Senior com foco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_15_dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="01/02/2021"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/textview_cargo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_80dp"
                android:layout_marginTop="@dimen/margin_15_dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>